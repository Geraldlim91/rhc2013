<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field="res" type="org.redhatchallenge.rhc2013.resources.Resources"/>

    <g:HTMLPanel>
        <div class="{res.grid.clear}"/>
        <div class="{res.grid.container_12} {res.grid.clearfix}">
            <div id="main">
                <div class="{res.grid.grid_12}">

                    <div class="{res.grid.grid_8} {res.grid.alpha}" style="text-align:center; margin:0 auto;">
                        <div class="{res.main.textbox}">
                            <g:HTML ui:field="messageLabel"/>
                        <tr><span style="position: relative; top: 7px; left: -2px;"><strong>SHARE:</strong></span></tr>
                            <!--<li><a href="https://www.facebook.com/sharer/sharer.php?u=example.org" target="_blank"> <img src="images/social_media_icons-16.png" alt="Facebook" /></a>-->


                            <tr><a href="#"
                                   onclick="
    window.open(
      'https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href),
      'facebook-share-dialog',
      'width=626,height=436');
    return false;">
                                <img src="images/social_media_icons-16.png" alt="Facebook" />
                            </a></tr>

                            <tr><a href="#"
                                   onclick="
    window.open(
      'https://twitter.com/intent/tweet?u='+encodeURIComponent(location.href),
      'twitter-share-dialog',
      'width=626,height=436');
    return false;"> <img src="images/social_media_icons-17.png" alt="Twitter" /></a></tr>

                        </div>
                        <div class="{res.main.panel02} {res.grid.clearfix}" style="margin-top: 1em;"/>
                    </div>
                    <div class="{res.grid.clear}"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>